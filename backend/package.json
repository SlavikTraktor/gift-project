{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "node ./dist/index.js",
    "start-run": "tsc && tsc-alias && node ./dist/index.js",
    "start-watch": "nodemon",
    "watch-ts": "tsc",
    "watch-alias": "tsc-alias -w",
    "watch-js": "nodemon",
    "migrate:create": "prisma migrate dev --create-only",
    "migrate": "prisma migrate dev",
    "migrate:test": "dotenv -e .env.test -- prisma migrate dev",
    "seed": "ts-node",
    "test:setup": "node ./tests/setUpBeforeTests.js",
    "test-watch:win": "npm run test:setup && set APP_ENV=test&& tap --watch --ts ./tests/functional",
    "test:win": "npm run test:setup && set APP_ENV=test&& tap --ts ./tests/functional",
    "test": "npm run test:setup && tap --ts ./tests/functional",
    "lint": "eslint ./src ./tests",
    "lint:fix": "eslint ./src ./tests --fix"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^8.1.0",
    "@fastify/jwt": "^6.3.1",
    "@fastify/middie": "^8.0.0",
    "@fastify/type-provider-typebox": "^2.2.0",
    "@prisma/client": "^4.2.1",
    "@sinclair/typebox": "^0.24.27",
    "bcrypt": "^5.0.1",
    "discord-oauth2": "^2.11.0",
    "dotenv": "^16.0.1",
    "fastify": "^4.3.0",
    "google-auth-library": "^8.7.0",
    "googleapis": "^114.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.19",
    "qs": "^6.11.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.4.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.184",
    "@types/mock-require": "^2.0.1",
    "@types/node": "^18.6.3",
    "@types/qs": "^6.9.7",
    "@types/tap": "^15.0.7",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.34.0",
    "mock-require": "^3.0.3",
